require xfont

FONT="baekmuk"

SUMMARY="Korean TrueType fonts"
HOMEPAGE="http://kldp.net/projects/baekmuk"
DOWNLOADS="http://kldp.net/frs/download.php/1429/${PNV}.tar.gz"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

src_install() {
    insinto /usr/share/fonts/X11/${FONT}/
    doins "${WORK}"/ttf/*.ttf

    emagicdocs

    fix_fonts
}

